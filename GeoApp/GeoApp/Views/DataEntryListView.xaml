<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GeoApp" x:Class="GeoApp.DataEntryListView" Title="Data Entries" BackgroundColor="#36393F">

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="add_icon"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ListView x:Name="listView">
            <ListView.ItemsSource>
                <x:Array Type="{x:Type local:DataEntry}">
                    <local:DataEntry Name="X Tree" Type="Point" TypeIcon="point_icon.png" />
                    <local:DataEntry Name="Y Plant" Type="Point" TypeIcon="point_icon.png" />
                    <local:DataEntry Name="Path between X and Y" Type="Line" TypeIcon="line_icon.png" />
                    <local:DataEntry Name="Z Garden" Type="Polygon" TypeIcon="area_icon.png" />
                </x:Array>
            </ListView.ItemsSource>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <!-- Grid Definition of 2x3 -->
                        <Grid 
                            ColumnSpacing="10" RowSpacing="0" Padding="10,4,10,4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="24" />
                            </Grid.ColumnDefinitions>

                            <!-- A single label is created using the grid layout, with an icon at the front, 2 layered text strings, and an icon at the end. -->
                            <Image Source="{Binding TypeIcon}" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" HeightRequest="24" WidthRequest="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding Name}" TextColor="White" HorizontalTextAlignment="Start" FontSize="Small" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>
                            <Label Text="{Binding Type}" TextColor="Cyan" HorizontalTextAlignment="Start" FontSize="Micro" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
                            <Image Source="edit_icon.png" Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" HeightRequest="24" WidthRequest="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>