<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GeoApp"
             x:Class="GeoApp.ExistingDetailFormView"
             Title=""
             BackgroundColor="Default">

    <ContentPage.BindingContext>
        <local:DetailFormViewModel x:Name="viewModel"/>
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="trash_icon" Command="{Binding DeleteEntryCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="Style" Value="{StaticResource DetailFormLabel}" />
        </Style>

        <Style TargetType="Entry">
            <Setter Property="Style" Value="{StaticResource DetailFormEntry}" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Spacing="0">
            <StackLayout Style="{StaticResource DetailFormPanelLayout}" Margin="10,10,10,10">
                <Grid Style="{StaticResource DetailFormPanelGrid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Text="Name" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" />
                    <Label x:Name="itemName" Text="{Binding NameEntry}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" TextColor="Gray"/>

                    <Label Text="Date" Grid.Row="0" Grid.Column="2" FontAttributes="Bold" />
                    <Label x:Name="dateEntry" Grid.Row="1" Grid.Column="2" TextColor="Gray"/>
                </Grid>
            </StackLayout>

            <StackLayout Style="{StaticResource DetailFormPanelLayout}" Margin="10,0,10,10">
                <Grid Style="{StaticResource DetailFormPanelGrid}" Margin="15,6,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Text="Geolocation Data" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" Margin="0, 9"/>
                </Grid>

                <ListView x:Name="geolocationListView" ItemTapped="listView_ItemTapped" HasUnevenRows="True" VerticalOptions="FillAndExpand" BackgroundColor="#e5e5e5" SeparatorColor="#717171" Margin="15,0,15,10" HeightRequest="150">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Style="{StaticResource DetailFormPanelGrid}" Margin="15,5,15,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="Latitude" Grid.Row="0" Grid.Column="0" Margin="0, 9"/>
                                    <Label Text="{Binding Latitude}" Grid.Row="1" Grid.Column="0" TextColor="Gray" LineBreakMode="TailTruncation"/>

                                    <Label Text="Longitude" Grid.Row="0" Grid.Column="1" Margin="0, 9"/>
                                    <Label Text="{Binding Longitude}" Grid.Row="1" Grid.Column="1" TextColor="Gray" LineBreakMode="TailTruncation"/>

                                    <Label Text="Altitude" Grid.Row="0" Grid.Column="2" Margin="0, 9"/>
                                    <Label Text="{Binding Altitude}" Grid.Row="1" Grid.Column="2" TextColor="Gray" LineBreakMode="TailTruncation"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

            <StackLayout Style="{StaticResource DetailFormPanelLayout}" Margin="10,0,10,10">
                <Grid Style="{StaticResource DetailFormPanelGrid}" Margin="15,6,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Text="Metadata" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" Margin="0, 9"/>
                </Grid>

                <ListView x:Name="listView" ItemTapped="listView_ItemTapped" HasUnevenRows="True" VerticalOptions="FillAndExpand" BackgroundColor="#e5e5e5"  Margin="15,0,15,10" HeightRequest="170">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Style="{StaticResource DetailFormPanelGrid}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding Path=Key}" TextColor="Black" HorizontalTextAlignment="Start" FontSize="Medium" Grid.Row="0" Grid.Column="0"/>
                                    <Entry Text="{Binding Path=Value}" TextColor="Gray" HorizontalOptions="FillAndExpand" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" FontSize="Small" IsEnabled="False"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>